{
  "$schema": "https://www.raycast.com/schemas/extension.json",
  "name": "act",
  "title": "AcT",
  "description": " It's  an advanced translation extension tailored for academic and technology texts. Key features include direct text selection from various sources including PDFs, automatic special character filtering, instant translation result saving to the clipboard, and storage of translations in local cache for easy access. Ideal for researchers, technologists, and students, IntelliTranslate Pro simplifies and accelerates your translation tasks, ensuring productivity and accuracy.",
  "icon": "command-icon.png",
  "author": "KissInt8",
  "categories": [
    "Productivity"
  ],
  "license": "MIT",
  "commands": [
    {
      "name": "index",
      "title": "translate",
      "description": "Show translation result.",
      "mode": "view",
      "preferences": [
        {
          "name": "youdaoTransAPPKey",
          "description": "Your AppKey",
          "title": "Youdao App Key",
          "type": "password",
          "required": true
        },
        {
          "name": "youdaoTransAPPSecret",
          "description": "Your AppSecret",
          "title": "Youdao App Secret",
          "type": "password",
          "required": true
        }
      ]
    }
  ],
  "dependencies": {
    "@raycast/api": "^1.55.2",
    "node-fetch": "^3.3.1"
  },
  "devDependencies": {
    "@raycast/eslint-config": "1.0.5",
    "@types/node": "18.8.3",
    "@types/node-fetch": "^2.6.4",
    "@types/react": "18.0.9",
    "eslint": "^7.32.0",
    "prettier": "^2.8.7",
    "typescript": "^4.4.3"
  },
  "scripts": {
    "build": "ray build -e dist",
    "dev": "ray develop",
    "fix-lint": "ray lint --fix",
    "lint": "ray lint",
    "publish": "npx @raycast/api@latest publish"
  }
}
